<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/rptlay1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/Lrptt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:background="@drawable/custom_round_white_view_bg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rptt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="0dip"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="DR Name"
                android:gravity="center|left"
                android:layout_gravity="center"
                android:textColor="@color/navigationBarColor"
                android:textSize="15sp" />
            <View
                android:layout_width="0.9dp"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="@color/colorPrimaryDark"/>

            <ImageView
                android:id="@+id/spinner_img_dcr_rpt_name"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="0.5dp"
                android:layout_gravity="center"
                android:padding="6.5dp"
                app:srcCompat="@drawable/drop_icon" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/Lmonth_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="From"
                android:textStyle="bold"
                android:textSize="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_round_white_view_bg"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/month_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="0dip"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="Month"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:textColor="@color/navigationBarColor"
                    android:textSize="12sp" />
                <View
                    android:layout_width="0.9dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/colorPrimaryDark"/>


                <ImageView
                    android:id="@+id/spinner_img_dcr_rpt_month"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_margin="2dp"
                    android:padding="6.5dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/calendar" />
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/Lmissed_type"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To"
                android:textStyle="bold"
                android:textSize="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_round_white_view_bg"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/missed_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="0dip"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="Month"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:textColor="@color/navigationBarColor"
                    android:textSize="12sp" />
                <View
                    android:layout_width="0.9dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/colorPrimaryDark"/>


                <ImageView
                    android:id="@+id/img_missed_type"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_margin="2dp"
                    android:padding="6.5dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/calendar" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?colorPrimaryDark"/>


</LinearLayout>
